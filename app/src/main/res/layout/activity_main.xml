<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.445" />

    <Button
        android:id="@+id/AboutMe"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="About Me"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ClickyClicky"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/ClickyClicky"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Clicky Clicky"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/AboutMe" />

    <Button
        android:id="@+id/LinkCollector"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="24dp"
        android:text="linkCollector"
        app:layout_constraintBottom_toTopOf="@id/AboutMe"
        app:layout_constraintLeft_toLeftOf="@+id/AboutMe" />

    <Button
        android:id="@+id/Locatorbutton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Locator"
        android:layout_marginBottom="24dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintRight_toRightOf="@+id/ClickyClicky"
        app:layout_constraintBottom_toTopOf="@+id/ClickyClicky" />

</androidx.constraintlayout.widget.ConstraintLayout>