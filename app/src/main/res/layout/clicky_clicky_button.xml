<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClickyClickyButton"
    tools:layout_editor_absoluteX="37dp"
    tools:layout_editor_absoluteY="-57dp">

    <Button
        android:id="@+id/CCButtonA"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="A"
        app:layout_constraintEnd_toStartOf="@+id/CCButtonB"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/CCButtonB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="B"
        app:layout_constraintEnd_toStartOf="@+id/CCButtonC"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CCButtonA"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/CCButtonC"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="C"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CCButtonB"
        tools:layout_editor_absoluteY="111dp" />

    <Button
        android:id="@+id/CCButtonD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="D"
        app:layout_constraintEnd_toStartOf="@+id/CCButtonE"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/CCButtonE"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="E"
        app:layout_constraintEnd_toStartOf="@+id/CCButtonF"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CCButtonD"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/CCButtonF"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/CCButtonE"
        tools:layout_editor_absoluteY="227dp" />


    <TextView
        android:id="@+id/CCTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Pressed: -"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:gravity="bottom|center" />


</androidx.constraintlayout.widget.ConstraintLayout>