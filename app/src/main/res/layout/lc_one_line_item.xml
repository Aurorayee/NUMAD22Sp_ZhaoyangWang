<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/lc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/lc_one_line_item_name"
        app:layout_constraintTop_toTopOf="@+id/lc_one_line_item_name" />

    <TextView
        android:id="@+id/lc_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintLeft_toRightOf="@id/lc_one_line_item_url"
        app:layout_constraintTop_toBottomOf="@id/lc_name"
        tools:layout_editor_absoluteX="102dp" />

    <View
        android:id="@+id/lc_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintTop_toBottomOf="@id/lc_url"
        tools:layout_editor_absoluteX="1dp" />

    <TextView
        android:id="@+id/lc_one_line_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="Name: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lc_one_line_item_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="URL:"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lc_one_line_item_name"

        app:layout_constraintTop_toTopOf="@id/lc_one_line_item_name" />
</androidx.constraintlayout.widget.ConstraintLayout>